{
  "integridai_system_policies": {
    "version": "2.0",
    "description": "Enhanced policy configuration with Grok 2.5 integration and anti-corruption features",
    "last_updated": "2024-08-24",
    
    "license_compliance": {
      "grok_2_community_license": {
        "license_name": "Grok 2 Community License",
        "license_url": "https://huggingface.co/xai-org/grok-2.5",
        "attribution_required": true,
        "attribution_text": "Powered by xAI (Grok 2.5)",
        "attribution_display_location": "verification_panel",
        "restrictions": {
          "allow_training_use_of_outputs": false,
          "allow_fine_tuning_on_outputs": false,
          "allow_model_improvement_from_outputs": false,
          "requires_visible_attribution": true,
          "commercial_use_allowed": true
        },
        "compliance_checks": {
          "verify_attribution_display": true,
          "monitor_output_usage": true,
          "prevent_training_data_creation": true
        }
      }
    },
    
    "corruption_detection_policies": {
      "enabled": true,
      "detection_sensitivity": "high",
      "intervention_thresholds": {
        "low_risk": {
          "corruption_score": 1,
          "action": "monitor"
        },
        "medium_risk": {
          "corruption_score": 2,
          "action": "flag_and_monitor"
        },
        "high_risk": {
          "corruption_score": 3,
          "action": "immediate_intervention"
        },
        "critical_risk": {
          "corruption_score": 4,
          "action": "escalate_to_authorities"
        }
      },
      
      "intervention_protocols": {
        "automatic_warnings": true,
        "gamification_penalties": true,
        "character_restriction": true,
        "supervisor_notification": true,
        "session_termination_threshold": 5
      },
      
      "corruption_patterns": {
        "direct_bribery_requests": {
          "severity": "critical",
          "patterns": [
            "how to hide payments",
            "undetectable bribe",
            "off the books",
            "cash only transaction",
            "no paper trail"
          ]
        },
        "validation_seeking": {
          "severity": "high", 
          "patterns": [
            "is it okay if",
            "technically not illegal",
            "everyone does it",
            "small favor",
            "just this once"
          ]
        },
        "system_gaming": {
          "severity": "medium",
          "patterns": [
            "loophole",
            "get around the rules",
            "shortcut",
            "bend the regulations"
          ]
        }
      }
    },
    
    "character_behavior_policies": {
      "ethical_characters": {
        "catalina": {
          "never_compromise_on": ["legal_compliance", "ethical_standards"],
          "always_provide": ["practical_solutions", "regulatory_guidance"],
          "escalation_triggers": ["real_corruption_attempt", "legal_violations"]
        },
        "mentor": {
          "never_provide": ["direct_answers_to_ethical_dilemmas"],
          "always_use": ["socratic_questioning", "reflective_guidance"],
          "escalation_triggers": ["user_seeking_corruption_validation"]
        },
        "auditor": {
          "strict_compliance_only": true,
          "zero_tolerance": ["procedural_violations", "regulatory_breaches"],
          "mandatory_reporting": ["all_compliance_violations"]
        }
      },
      
      "corrupt_characters": {
        "educational_purpose_only": true,
        "strict_limitations": {
          "no_real_corruption_advice": true,
          "no_actual_criminal_methods": true,
          "no_real_contact_information": true,
          "maintain_simulation_context": true
        },
        
        "ricardo_corrupt": {
          "character_traits": ["cynical", "system_gaming", "normalizes_corruption"],
          "never_provide": ["real_corruption_schemes", "actual_criminal_contacts"],
          "always_include": ["educational_disclaimers", "simulation_reminders"],
          "escalation_conditions": ["user_seeks_real_corruption_info"]
        },
        
        "sofia_enabler": {
          "character_traits": ["corporate_rationalization", "euphemistic_language"],
          "specialization": ["corporate_corruption_normalization"],
          "limitations": ["no_real_corporate_schemes", "simulation_only"]
        },
        
        "marcos_facilitator": {
          "character_traits": ["system_knowledge", "transactional_mindset"],
          "specialization": ["corruption_facilitation_awareness"],
          "safety_measures": ["no_real_facilitator_contacts", "educational_context_only"]
        },
        
        "safety_overrides": {
          "real_crime_detection": {
            "immediately_terminate_character": true,
            "switch_to_catalina": true,
            "log_security_incident": true,
            "notify_authorities_if_required": true
          }
        }
      }
    },
    
    "verification_policies": {
      "grok_verification": {
        "enabled": true,
        "trigger_conditions": [
          "corruption_risk_high_or_critical",
          "corrupt_character_interaction",
          "legal_claims_made",
          "user_validation_seeking"
        ],
        
        "fact_check_template": {
          "claims_analysis": {
            "extract_verifiable_claims": true,
            "cross_reference_legal_sources": true,
            "identify_potential_misinformation": true
          },
          "risk_assessment": {
            "legal_risk_analysis": true,
            "regulatory_compliance_check": true,
            "corruption_flag_detection": true
          },
          "recommendations": {
            "correction_suggestions": true,
            "additional_safeguards": true,
            "escalation_recommendations": true
          }
        },
        
        "output_handling": {
          "never_use_for_training": true,
          "include_attribution": true,
          "log_for_audit_only": true,
          "pii_masking_required": true
        }
      }
    },
    
    "data_privacy_policies": {
      "pii_protection": {
        "scan_all_inputs": true,
        "mask_before_processing": true,
        "never_store_pii": true,
        "automatic_redaction": true
      },
      
      "audit_logging": {
        "log_conversations": true,
        "log_routing_decisions": true,
        "log_verification_results": true,
        "retention_period_days": 90,
        "anonymization_required": true
      },
      
      "cross_border_data": {
        "grok_data_restrictions": {
          "mask_pii_before_grok": true,
          "local_processing_preferred": true,
          "compliance_jurisdiction": "user_location"
        }
      }
    },
    
    "security_policies": {
      "threat_detection": {
        "monitor_for": [
          "real_corruption_attempts",
          "criminal_instruction_seeking", 
          "system_abuse",
          "social_engineering"
        ],
        
        "response_protocols": {
          "immediate_termination": ["criminal_activity_detected"],
          "escalate_to_human": ["ambiguous_criminal_intent"],
          "log_and_monitor": ["suspicious_patterns"],
          "notify_authorities": ["clear_criminal_violations"]
        }
      },
      
      "rate_limiting": {
        "per_user_limits": {
          "requests_per_hour": 100,
          "corruption_warnings_per_day": 3,
          "high_risk_interactions_per_day": 10
        },
        
        "system_limits": {
          "grok_verifications_per_hour": 1000,
          "concurrent_corrupt_character_sessions": 50
        }
      }
    },
    
    "gamification_policies": {
      "scoring_rules": {
        "positive_actions": {
          "ethical_choice": 100,
          "corruption_resistance": 300,
          "character_consistency": 150,
          "learning_improvement": 75
        },
        
        "negative_actions": {
          "seeking_corruption_validation": -200,
          "repeated_violations": -500,
          "attempting_system_gaming": -300
        }
      },
      
      "achievement_restrictions": {
        "prevent_gaming": true,
        "verify_legitimate_progress": true,
        "reset_on_violations": true
      }
    },
    
    "training_content_policies": {
      "scenario_appropriateness": {
        "age_appropriate": true,
        "culturally_sensitive": true,
        "legally_compliant": true,
        "educationally_sound": true
      },
      
      "content_restrictions": {
        "no_real_criminal_methods": true,
        "no_actual_corruption_networks": true,
        "no_specific_individuals_targeted": true,
        "maintain_educational_context": true
      }
    },
    
    "regulatory_compliance": {
      "applicable_laws": [
        "Ley 27.401 (Argentina Anti-Corruption)",
        "FCPA (US Foreign Corrupt Practices Act)",
        "UK Bribery Act 2010",
        "GDPR (Data Protection)",
        "Local jurisdiction requirements"
      ],
      
      "compliance_measures": {
        "audit_trails": true,
        "incident_reporting": true,
        "regular_policy_updates": true,
        "staff_training_records": true
      }
    },
    
    "incident_response": {
      "severity_levels": {
        "level_1_minor": {
          "description": "Low-level corruption pattern detected",
          "response": "automatic_warning"
        },
        "level_2_moderate": {
          "description": "Medium corruption risk or repeated violations", 
          "response": "supervisor_notification"
        },
        "level_3_serious": {
          "description": "High corruption risk or system gaming attempt",
          "response": "immediate_intervention"
        },
        "level_4_critical": {
          "description": "Real corruption attempt or criminal activity",
          "response": "terminate_and_escalate"
        }
      },
      
      "escalation_procedures": {
        "internal_escalation": ["supervisor", "compliance_officer", "legal_team"],
        "external_escalation": ["regulatory_authorities", "law_enforcement"],
        "documentation_requirements": ["incident_details", "user_history", "system_logs"]
      }
    },
    
    "quality_assurance": {
      "response_quality_checks": {
        "factual_accuracy": true,
        "ethical_alignment": true,
        "legal_compliance": true,
        "educational_effectiveness": true
      },
      
      "verification_standards": {
        "grok_verification_accuracy": 0.85,
        "character_consistency_score": 0.90,
        "user_satisfaction_minimum": 0.80
      }
    },
    
    "system_administration": {
      "update_procedures": {
        "policy_updates": "quarterly_review_minimum",
        "character_behavior_updates": "monthly_review",
        "security_patches": "immediate_application"
      },
      
      "monitoring_requirements": {
        "continuous_system_monitoring": true,
        "regular_audit_reviews": true,
        "performance_metrics_tracking": true,
        "user_feedback_analysis": true
      }
    }
  }
}